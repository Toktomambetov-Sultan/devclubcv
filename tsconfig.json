{
    "compilerOptions": {
        "target": "ESNext",
        // "target": "ESNext",  // Target latest ECMAScript version (ESNext)
        "module": "ESNext",
        "types": [
            "vite/client"
        ],
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        // "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "./shadcn/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.jsx"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
}